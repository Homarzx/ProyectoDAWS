<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Productos</h2>
                    </div>
                    <div class="col-sm-7">
                        <button class="btn btn-success btn-block" type="button" data-toggle="modal" data-target="#user-form-modal">Añadir Producto</button>

                    </div>
                   
                   
                </div>
                <!--FORM-->
                <div class="modal fade" role="dialog" tabindex="-1" id="user-form-modal">
                    <div class="modal-dialog modal-lg" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Añadir Producto</h5>
                          <button type="button" class="close" data-dismiss="modal">
                          <span aria-hidden="true">×</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <div class="py-1">
                            <form class="form" novalidate="">
                              <div class="row">
                                <div class="col">
                                  
                                  <!-- Nombre y Apellido -->
                                  <div class="row">
                                    <div class="col">
                                      <div class="form-group">
                                        <label>Nombre Producto</label>
                                        <input class="form-control" type="text" name="name" placeholder="Ingrese el Nombre del Producto" >
                                      </div>
                                    </div>
                                    <div class="col">
                                      <div class="form-group">
                                        <label>Id Categoria</label>
                                        <input class="form-control" type="text" name="id_categoria" placeholder="Ingrese el id de la categoria" >
                                      </div>
                                    </div>
                                   
                                  
                                </div>
                              </div>
                              <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                      <label>Stock</label>
                                      <input class="form-control" type="text" name="stock" placeholder=0 >
                                    </div>
                                  </div>
                                
                              </div> 
                                <div class="col">
                                        <div class="form-group">
                                          <label>Precio</label>
                                          <input class="form-control" type="text" name="precio"  placeholder=0 >
                                        </div>
                                </div>  
                                <div class="col">
                                    <div class="form-group">
                                      <label>Imagen</label>
                                      <input class="form-control" type="text" name="imagen"  placeholder="Ingrese la Ruta de la imagen" >
                                    </div>
                                </div> 
                                <div class="col">
                                  <div class="form-group">
                                    <label>Descripcion</label>
                                    <input class="form-control" type="text" name="descripcion"  placeholder="Descripcion del Producto" >
                                  </div> 
                              </div>
                              </div>
                              <div class="row">
                                <div class="col">
                                  <div class="col d-flex justify-content-end">
                                    <button class="btn btn-primary" type="submit">Guardar</button>
                                  </div>
                                </div>
                              </div>
                              
                             
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre Producto</th>
                        <th>Nombre Categoria</th>
                        <th>Stock</th>
                        <th>Precio</th>
                        <th>Descripcion</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto){ %>
                        <tr>
                          <td><%= producto.id %></td>
                          <td><%= producto.nombre %></td>  
                          <td><%= producto.categorium.nombre %></td> 
                          <td><%= producto.stock %></td>
                          <td><%= producto.precio %></td>
                          <td><%= producto.descripcion %></td>
                          <td>
                              <button class="btn btn-sm btn-outline-secondary badge" type="button" data-toggle="modal" data-target="#user-form-editar">Edit</button>
                              <a href="#" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                          </td>
                        </tr>
                      <% }); %>
                </tbody>
            </table>
            <div class="editarForm">
              <div class="modal fade" role="dialog" tabindex="-1" id="user-form-editar">
                <div class="modal-dialog modal-lg" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Editar Categoria</h5>
                      <button type="button" class="close" data-dismiss="modal">
                      <span aria-hidden="true">×</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <div class="py-1">
                        <form class="form" novalidate="">
                          <div class="row">
                            <div class="col">
                              
                              <!-- Nombre y Apellido -->
                              <div class="row">
                                <div class="col">
                                  <div class="form-group">
                                    <label>Nombre Producto</label>
                                    <input class="form-control" type="text" name="name" placeholder="Ingrese el Nombre del Producto" value="nombre">
                                  </div>
                                </div>
                                <div class="col">
                                  <div class="form-group">
                                    <label>Id Categoria</label>
                                    <input class="form-control" type="text" name="id_categoria" placeholder="Ingrese el id de la categoria" value="id categoria">
                                  </div>
                                </div>
                               
                              
                            </div>
                          </div>
                          <div class="row">
                            <div class="col">
                                <div class="form-group">
                                  <label>Stock</label>
                                  <input class="form-control" type="text" name="stock" placeholder=0 value="stock">
                                </div>
                              </div>
                            
                          </div> 
                            <div class="col">
                                    <div class="form-group">
                                      <label>Precio</label>
                                      <input class="form-control" type="text" name="precio"  placeholder=0 value="precio">
                                    </div>
                            </div>  
                            <div class="col">
                                <div class="form-group">
                                  <label>Imagen</label>
                                  <input class="form-control" type="text" name="imagen"  placeholder="Ingrese la Ruta de la imagen" value="imagen">
                                </div>
                            </div> 
                            <div class="col">
                              <div class="form-group">
                                <label>Descripcion</label>
                                <input class="form-control" type="text" name="descripcion"  placeholder="Descripcion del Producto" value="descripcion">
                              </div> 
                          </div>
                          </div>
                          <div class="row">
                            <div class="col">
                              <div class="col d-flex justify-content-end">
                                <button class="botonGuardar btn-primary" type="submit">Guardar</button>
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
            </div>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>  
</main>